<Window x:Class="Acc.Gui.UserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Acc.Gui"
        mc:Ignorable="d"
        Title="Создание игроков" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Height="350" Width="612.245">
    <Grid>
        <StackPanel Orientation="Vertical">
            <StackPanel Margin="10" Orientation="Horizontal">
                <Label Width="120" >ФИО</Label>
                <TextBox x:Name="fio" Margin="100 0 0 0" Width="300"></TextBox>
            </StackPanel>

            <StackPanel Margin="10" Orientation="Horizontal">
                <Label Width="120">Начальная сумма</Label>
                <TextBox x:Name="price" Margin="100 0 0 0" Width="300"></TextBox>
            </StackPanel>

            <StackPanel Margin="10" Orientation="Horizontal">
                <Label Width="120">Заметка</Label>
                <TextBox x:Name="description"  Margin="100 0 0 0" Width="300" Height="100" TextWrapping="Wrap"></TextBox>
            </StackPanel>
            <StackPanel>
                <Button HorizontalAlignment="Right" Width="200" Height="56" Margin="0 0 80 0" Content="Создать"/>

            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
