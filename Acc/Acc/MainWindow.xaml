    <Window.Resources>
        <Style TargetType="Label" x:Key="FlatStyleButton1">
            <Setter Property="FontSize" Value="10" />
            <Setter Property="Margin" Value="-7 0 5 0" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="Foreground" Value="Red" />

            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Cursor" Value="Hand" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="Label" x:Key="FlatStyleButton2">
            <Setter Property="FontSize" Value="10" />
            <Setter Property="Margin" Value="0" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="Foreground" Value="Green" />

            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Cursor" Value="Hand" />
                </Trigger>
            </Style.Triggers>
        </Style>


    </Window.Resources>
    <DockPanel
        MinWidth="400"
        MinHeight="300"
        LastChildFill="True">


        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
            <Button
                Width="Auto"
                Height="55"
                MinWidth="100"
                Margin="5"
                Background="White"
                Click="add_game">
                ADD GAME
            </Button>

            <Button
                Width="Auto"
                Height="55"
                MinWidth="100"
                Margin="5"
                Background="White"
                Click="add_players">
                ADD PLAYER
            </Button>

            <Button
                Width="Auto"
                Height="55"
                MinWidth="100"
                Margin="5"
                Background="White"
                Click="game_list">
                GAME LIST
            </Button>
            <StackPanel Margin="100,0,0,0" Orientation="Horizontal">
                <DatePicker
                    x:Name="datePicker1"
                    Height="55"
                    Margin="5"
                    Padding="0,15,0,0"
                    IsDropDownOpen="False"
                    SelectedDateChanged="eventhandler"
                    SelectedDateFormat="Short" />

            </StackPanel>
        </StackPanel>

