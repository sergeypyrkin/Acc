<Window x:Class="Acc.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        Title="ВОЛЕЙБОЛЛ" Height="850" Width="1200">
    <DockPanel LastChildFill="True" MinWidth="400" MinHeight="300">


       <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
            <Button Margin="5" MinWidth="100" Click="add_game" Background="White"  Width="Auto"    
                    Height="55">ADD GAME</Button>

            <Button Margin="5" MinWidth="100" Click="add_players" Background="White"  Width="Auto"    
                    Height="55">ADD PLAYER</Button>

            <Button Margin="5" MinWidth="100" Click="game_list" Background="White"  Width="Auto"    
                    Height="55">GAME LIST</Button>
           <StackPanel Margin="100 0 0 0" Orientation="Horizontal">
               <Label HorizontalContentAlignment="Right" Margin="0 0 0 0" x:Name="ot" Width="100" Content=" -----" Height="28"></Label>
                <DatePicker Padding="0 15 0 0"  Margin="5"  SelectedDateChanged ="eventhandler"  x:Name="datePicker1" IsDropDownOpen="False"  SelectedDateFormat="Short" Height="55" />
               <Label HorizontalContentAlignment="Left" Margin="0 0 0 0" x:Name="after" Width="100" Content=" -----" Height="28"></Label>

            </StackPanel>
        </StackPanel>

        <ListView Margin="10" Name="datagrid" DockPanel.Dock="Top"
                  BorderBrush="#FF25A0DA"
                  BorderThickness="1"
                  FontFamily="Microsoft Sans Serif"
                  FontSize="15"
                  Foreground="#FF000000"
                  KeyboardNavigation.DirectionalNavigation="Cycle"
                  IsTextSearchEnabled="False"
                  SelectionChanged="dataGridView1_SelectionChanged">
            <ListView.ItemContainerStyle>
                <Style TargetType="{x:Type ListViewItem}">
                    <Style.Triggers>

                      

                        <DataTrigger Binding="{Binding FlagDel}" Value="true">
                            <Setter Property="Foreground" Value="Gray" />
                            <Setter Property="Background" Value="White" />
                        </DataTrigger>


                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Foreground" Value="White" />
                            <Setter Property="Background" Value="Blue" />
                        </Trigger>
                   


                    </Style.Triggers>

                </Style>
            </ListView.ItemContainerStyle>
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="#" Width="30" DisplayMemberBinding="{Binding Number}" />
                    <GridViewColumn Header="Name" Width="150" DisplayMemberBinding="{Binding Name}" />
                </GridView>
            </ListView.View>
        </ListView>


    </DockPanel>
</Window>

